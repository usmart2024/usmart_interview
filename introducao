Gerando certificado :

sudo apt-get update
sudo apt-get install certbot

mkdir -p /home/ubuntu/PycharmProjects/usmart_interview/certs

sudo cp /home/ubuntu22/PycharmProjects/usmart_interview/fullchain.pem /home/ubuntu22/PycharmProjects/usmart_interview/certs/
sudo cp /home/ubuntu22/PycharmProjects/usmart_interview/privkey.pem /home/ubuntu22/PycharmProjects/usmart_interview/certs/
sudo chown ubuntu22:ubuntu22 /home/ubuntu/PycharmProjects/usmart_interview/certs/*.pem

#!/bin/bash

APP_DIR="/home/ubuntu/PycharmProjects/usmart_interview"
CERT_DIR="/home/ubuntu/PycharmProjects/usmart_interview/certs"

chmod +x run_gunicorn.sh

if [ -d "$CERT_DIR" ]; then
    cd "$APP_DIR"
    gunicorn -w 4 -b 0.0.0.0:8000 --certfile=$CERT_DIR/fullchain.pem --keyfile=$CERT_DIR/privkey.pem run:app
else
    echo "Certificado SSL n√£o encontrado em $CERT_DIR"
fi

./run_gunicorn.sh



sudo certbot certonly --standalone -d intercode.usmartdigital.com.br
sudo systemctl status certbot.timer





